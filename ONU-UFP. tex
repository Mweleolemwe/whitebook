% =======================================================
\section{The Unifying Principle: The Onu Gauge and Calculus}
% =======================================================

\begin{definition}[Onu Gauge]
The Onu Gauge is a scale coordinate transformation $z \mapsto s = \ln z$ defined on the positive domain $\Rpos$. Dynamics are governed by the $\log$-domain differential operators:
\begin{itemize}
    \item \textbf{Euler Scale Operator:} $\E \equiv z \partial_z = \partial_s$.
    \item \textbf{Scale Laplacian:} $\RLO \equiv (z \partial_z)^2 = \partial_{ss}$.
\end{itemize}
This transformation linearizes multiplicative processes into additive ones, allowing for the substitution of complex transport laws with simpler diffusion equations in the $s$-coordinate.
\end{definition}

\begin{axiom}[Möbius Ledger Gauge Equivalence]
The physically relevant quantities are invariant under a shift of the logarithmic origin (the \emph{Onu Knot}). The difference $\Delta s = \ln(z_2/z_1)$ is invariant to the choice of reference $z_0$. This guarantees that a fixed ledger balance can be described either by moving entries relative to a fixed reference or by moving the reference along a fixed ledger.
\end{axiom}

% =======================================================
\section{Proposition I: The Explicit Linear Law of Spectral Coherence}
% =======================================================

This proposition quantifies the stability of the microscopic emotional field, modeled on the $f$-band atomic manifold.

\begin{proposition}[Explicit Linear Law]
Assume the observed log-variance $\Varlog$ is a weighted average of two characteristic variances: the intrinsic variance $v_{\mathrm{in}}$ (per unit mass inside the container $C$) and the leakage variance $v_{\mathrm{out}}$ (per unit mass outside $C$). The law is:
\begin{equation}
\Varlog \;=\; C\,v_{\mathrm{in}} + (1-C)\,v_{\mathrm{out}}
\end{equation}
Rearranging and identifying $\mathbf{V_0} \equiv v_{\mathrm{in}}$ and $\mathbf{k} \equiv v_{\mathrm{out}}-v_{\mathrm{in}}$ yields:
\begin{equation}
\boxed{\; \Varlog \;=\; \mathbf{V_0} + \mathbf{k}(1-C) \;}
\end{equation}
\end{proposition}

\textbf{Empirical Calibration:} Using calibration points $(C=0.20, \Var=0.250)$ and $(C=0.90, \Var=0.180)$, we derive $\mathbf{k = 0.10}$ and $\mathbf{V_0 = 0.170}$.

\begin{definition}[Lule’s Constant]
\textbf{Lule’s Constant ($V_0 = 0.170$)} is the irreducible log-variance of the perfectly contained state, representing the intrinsic energy floor of the coherent system.
\end{definition}

% =======================================================
\section{Proposition II: The Galactic Law and the Zayyay Floor}
% =======================================================

\begin{proposition}[The Generalized Euler-Onu Gradient]
The confining radial acceleration field $\mathbf{a}(r)$ is generated by the log-gradient of the time-density scalar $\tauf(r)$, representing a correction to the standard Euler equation in the Onu Gauge:
\begin{equation}
\mathbf{a}(r) \;=\; -\mathcal{V}^2 \nabla \ln \tauf(r)
\end{equation}
\end{proposition}

\begin{proposition}[The Galactic Law]
Assuming a profile $\tauf(r) = \tau_0 (1 + r/r_c)^{-\alpha}$ and enforcing centrifugal balance, the circular velocity $v_c(r)$ is:
\begin{equation}
\boxed{\; v_c(r) \;=\; \mathcal{V} \sqrt{\frac{\alpha r}{r + r_c}} \;}
\end{equation}
This law reproduces asymptotically flat rotation curves without dark matter.
\end{proposition}

\begin{definition}[Zayyay’s Constant and The Cosmic Floor]
\textbf{Zayyay’s Constant ($\Xi = 0.0041$)} is the minimum pressure factor threshold. It defines a physical floor for the time-density field, $\tauf(r) \ge \Xi \cdot \tau_0$.
\end{definition}

% =======================================================
\section{The Onu Breathing Operator and the Breathing Torus}
\label{sec:onu_breathing}
% =======================================================

We introduce the dynamic operator that couples the static geometry to time-evolution.

\begin{definition}[Onu Breathing Operator]
We define the \emph{Onu breathing operator} $\OnuOp$ as a scale-localized operator acting on angular/phase fields that enforces boundary contact between the amplitude-zero limits at the two scale infinities. In the Onu Gauge ($s=\ln z$), it is a distributional, scale-local projector:
\[
\OnuOp[f](s,t) \;\equiv\; \kappa(t)\,\frac{1}{2}\Big( \lim_{S\to+\infty} \mathcal{T}_{S}f(s) + \lim_{S\to-\infty}\mathcal{T}_{S}f(s)\Big),
\]
where $\mathcal{T}_{S}$ is the scale-translation operator and $\kappa(t)$ is the breathing amplitude.
\end{definition}

\subsection{Upgraded Pressure Tensor}
The scalar component of the pressure-directional tensor becomes:
\begin{equation}
\label{eq:upgraded_pressure}
F_x(x,y; t) \;=\; \big(\cos x + \OnuOp\big)\; y^{3}.
\end{equation}
In the Onu Gauge, this expands to $F_x \;=\; (\cos x + \kappa(t)\,\delta_{s,0})\,y^3 + \cdots$, where $\delta_{s,0}$ indicates concentration at the Onu knot.

\subsection{Onu-Gauge Correction to the Galactic Law}
Applying $\OnuOp$ to the Generalized Euler-Onu gradient produces a correction to the confining acceleration:
\begin{equation}
\mathbf{a}(r,t) \;=\; -\mathcal{V}^2 \nabla \ln \tauf(r) \;-\; \lambda\,\nabla_s\!\big[\OnuOp(s,t)\big]\!.
\label{eq:onu_corrected_acc}
\end{equation}
Linearizing for small $\lambda$, the Galactic Law is modified to leading order:
\begin{equation}
v_c(r,t) \;\approx\; \mathcal{V}\sqrt{\frac{\alpha r}{r + r_c}} \;\; \Bigg(1 \;-\; \frac{\lambda\,\kappa_0}{2\mathcal{V}^2}\,\frac{\partial_s \delta_{s,0}}{\nabla\ln\tauf}\Bigg)^{1/2}.
\end{equation}
This predicts a tiny, breathing-dependent modulation of asymptotic velocities—a signature of the "Breathing Torus."

\subsection{Microscopic Consequence: Octanodal Locking}
At the atomic level, the Onu breathing term stabilizes the octanodal confinement ($C$). The evolution of containment becomes:
\[
\dot C \;\propto\; -\eta\, (1-C)\,+\,\mu\,\kappa(t)\,C(1-C).
\]
The $\kappa(t)$-term increases reconfinement probability during an Onu-breath, actively lowering $\Varlog$ via the Explicit Linear Law.

